<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:SkyDrop.Resources"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             x:Class="SkyDrop.Controls.InstructionsOverlay"
             Focusable="True">

    <Border Margin="10" Background="{DynamicResource OverlayBackgroundBrush}" CornerRadius="12">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="25" MaxWidth="400">
            <TextBlock Text="{x:Static res:Strings.HowToPlay}"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="{DynamicResource AccentCyanBrush}"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="{x:Static res:Strings.InstructionsIntro}"
                       FontSize="14"
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       LineHeight="20"/>

            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="{x:Static res:Strings.Controls}"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentGoldBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" Margin="10,0">
                        <Border Grid.Row="0" Grid.Column="0"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12,6"
                                Margin="0,0,15,8">
                            <TextBlock Text="← →  or  A D"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{x:Static res:Strings.ControlMoveLeftRight}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <Border Grid.Row="1" Grid.Column="0"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12,6"
                                Margin="0,0,15,8">
                            <TextBlock Text="↑  or  X / Z"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{x:Static res:Strings.ControlRotateCW}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <Border Grid.Row="2" Grid.Column="0"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12,6"
                                Margin="0,0,15,8">
                            <TextBlock Text="↓  or  S"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <TextBlock Grid.Row="2" Grid.Column="1"
                                   Text="{x:Static res:Strings.ControlSoftDropDesc}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <Border Grid.Row="3" Grid.Column="0"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12,6"
                                Margin="0,0,15,8">
                            <TextBlock Text="SPACE"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                   Text="{x:Static res:Strings.ControlHardDrop}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>

                        <Border Grid.Row="4" Grid.Column="0"
                                Background="{DynamicResource ButtonBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12,6"
                                Margin="0,0,15,8">
                            <TextBlock Text="ESC  or  P"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                        </Border>
                        <TextBlock Grid.Row="4" Grid.Column="1"
                                   Text="{x:Static res:Strings.ControlPauseGame}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Mode-specific instructions -->
            <TextBlock x:Name="ModeInstructionsText"
                       FontSize="12"
                       Foreground="{DynamicResource TertiaryTextBrush}"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       IsVisible="False"/>

            <!-- Start Button -->
            <Button x:Name="StartButton"
                    Content="{x:Static res:Strings.StartGame}"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="60,18"
                    Background="{DynamicResource AccentGreenBrush}"
                    Foreground="White"
                    CornerRadius="4"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Focusable="False"/>

            <TextBlock Text="{x:Static res:Strings.PressEnterToStart}"
                       FontSize="11"
                       Foreground="{DynamicResource MutedTextBrush}"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
