<Window xmlns="https://github.com/avaloniaui"
        xmlns:controls="using:SkyDrop.Controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SkyDrop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:SkyDrop.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SkyDrop.Views.MainWindow"
        Title="SkyDrop"
        Width="600"
        Height="700"
        MinWidth="500"
        MinHeight="600"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        Background="{DynamicResource GameBackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <controls:StarFieldBackground StarCount="120" EnableTwinkle="True"/>
        <controls:CloudFieldBackground CloudCount="8" EnableAnimation="True"/>
    </Grid>

</Window>
