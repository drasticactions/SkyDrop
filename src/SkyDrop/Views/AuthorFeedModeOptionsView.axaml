<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SkyDrop.ViewModels"
             xmlns:res="clr-namespace:SkyDrop.Resources"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="700"
             x:Class="SkyDrop.Views.AuthorFeedModeOptionsView"
             x:DataType="vm:AuthorFeedModeOptionsViewModel"
             Focusable="True">

    <ScrollViewer x:Name="MainScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel HorizontalAlignment="Center" Spacing="20">
            <StackPanel Margin="0,40,0,0" HorizontalAlignment="Center">
                <TextBlock Text="{x:Static res:Strings.ModeAuthorFeed}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentCyanBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Static res:Strings.PlayWhileViewingPosts}"
                           FontSize="14"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Spacing="20">

                <StackPanel Spacing="10">
                    <TextBlock Text="{x:Static res:Strings.BlueskyHandle}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Center"/>

                    <Border x:Name="HandleInputBorder"
                            BorderBrush="Transparent"
                            BorderThickness="3"
                            CornerRadius="8"
                            Padding="5"
                            HorizontalAlignment="Center">
                        <Grid ColumnDefinitions="*,Auto" Width="350">
                            <TextBox x:Name="HandleTextBox"
                                     Grid.Column="0"
                                     Text="{Binding AuthorHandle, Mode=TwoWay}"
                                     FontSize="14"
                                     Padding="12,10"
                                     CornerRadius="4,0,0,4"/>
                            <Button Grid.Column="1"
                                    Content="{x:Static res:Strings.Lookup}"
                                    Command="{Binding LookupProfileCommand}"
                                    IsEnabled="{Binding !IsResolvingProfile}"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Padding="15,10"
                                    Background="{DynamicResource AccentCyanBrush}"
                                    Foreground="White"
                                    CornerRadius="0,4,4,0"
                                    Focusable="False"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="{x:Static res:Strings.LookingUpProfile}"
                               FontSize="12"
                               Foreground="{DynamicResource TertiaryTextBrush}"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding IsResolvingProfile}"/>

                    <Border Background="#44FF4444"
                            CornerRadius="4"
                            Padding="10,6"
                            IsVisible="{Binding ProfileError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ProfileError}"
                                   FontSize="12"
                                   Foreground="#FFFF6666"/>
                    </Border>

                    <Border Background="{DynamicResource PanelBackgroundBrush}"
                            CornerRadius="4"
                            Padding="15,10"
                            IsVisible="{Binding HasResolvedProfile}"
                            HorizontalAlignment="Center"
                            MinWidth="300">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Spacing="2">
                                <TextBlock Text="{Binding ResolvedDisplayName}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource AccentGreenBrush}"/>
                                <TextBlock FontSize="11" Foreground="{DynamicResource TertiaryTextBrush}">
                                    <Run Text="@"/>
                                    <Run Text="{Binding ResolvedProfile.Handle.Handle}"/>
                                </TextBlock>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="X"
                                    Command="{Binding ClearProfileCommand}"
                                    FontSize="10"
                                    Padding="8,4"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TertiaryTextBrush}"
                                    VerticalAlignment="Top"
                                    Focusable="False"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="{x:Static res:Strings.EnterHandleHint}"
                               FontSize="12"
                               Foreground="{DynamicResource TertiaryTextBrush}"
                               HorizontalAlignment="Center"
                               IsVisible="{Binding !HasResolvedProfile}"/>
                </StackPanel>

                <StackPanel Spacing="10" IsVisible="{Binding HasResolvedProfile}">
                    <TextBlock Text="{x:Static res:Strings.FeedFilter}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Center"/>

                    <Border x:Name="FilterSelectorBorder"
                            BorderBrush="Transparent"
                            BorderThickness="3"
                            CornerRadius="8"
                            Padding="5"
                            HorizontalAlignment="Center">
                        <Grid ColumnDefinitions="Auto,Auto,Auto" HorizontalAlignment="Center">
                            <Button Grid.Column="0"
                                    Content="&#9664;"
                                    Command="{Binding PreviousFilterCommand}"
                                    FontSize="24"
                                    Width="50"
                                    Height="50"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    CornerRadius="4"
                                    Focusable="False"/>

                            <Border Grid.Column="1"
                                    Background="{DynamicResource NextPieceBackgroundBrush}"
                                    CornerRadius="4"
                                    Margin="10,0"
                                    Padding="20,10"
                                    MinWidth="150">
                                <StackPanel HorizontalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{Binding SelectedFilter.DisplayName}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource AccentGoldBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding SelectedFilter.Description}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TertiaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Button Grid.Column="2"
                                    Content="&#9654;"
                                    Command="{Binding NextFilterCommand}"
                                    FontSize="24"
                                    Width="50"
                                    Height="50"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    CornerRadius="4"
                                    Focusable="False"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Spacing="10" IsVisible="{Binding HasResolvedProfile}">
                    <TextBlock Text="{x:Static res:Strings.GameType}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Center"/>

                    <Border x:Name="GameTypeSelectorBorder"
                            BorderBrush="Transparent"
                            BorderThickness="3"
                            CornerRadius="8"
                            Padding="5"
                            HorizontalAlignment="Center">
                        <Grid ColumnDefinitions="*,*" HorizontalAlignment="Center">
                            <Border Grid.Column="0"
                                    x:Name="RevealModeButton"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    CornerRadius="4,0,0,4"
                                    Padding="20,12"
                                    Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{x:Static res:Strings.Reveal}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static res:Strings.RevealDesc}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TertiaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1"
                                    x:Name="ScrollModeButton"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    CornerRadius="0,4,4,0"
                                    Padding="20,12"
                                    Cursor="Hand">
                                <StackPanel HorizontalAlignment="Center" Spacing="4">
                                    <TextBlock Text="{x:Static res:Strings.Scroll}"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static res:Strings.ScrollDesc}"
                                               FontSize="10"
                                               Foreground="{DynamicResource TertiaryTextBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <TextBlock Text="{Binding GameTypeDescription}"
                               FontSize="12"
                               Foreground="{DynamicResource AccentGoldBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Spacing="10" IsVisible="{Binding HasResolvedProfile}">
                    <TextBlock Text="{x:Static res:Strings.SelectLevel}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Center"/>

                    <Border x:Name="LevelSelectorBorder"
                            BorderBrush="Transparent"
                            BorderThickness="3"
                            CornerRadius="8"
                            Padding="5"
                            HorizontalAlignment="Center">
                        <Grid ColumnDefinitions="Auto,Auto,Auto" HorizontalAlignment="Center">
                            <Button Grid.Column="0"
                                    Content="&#9664;"
                                    Command="{Binding DecreaseLevelCommand}"
                                    FontSize="24"
                                    Width="50"
                                    Height="50"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    CornerRadius="4"
                                    Focusable="False"/>

                            <Border Grid.Column="1"
                                    Background="{DynamicResource NextPieceBackgroundBrush}"
                                    CornerRadius="4"
                                    Margin="20,0"
                                    Padding="30,10"
                                    MinWidth="100">
                                <TextBlock Text="{Binding SelectedLevel}"
                                           FontSize="36"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource AccentGoldBrush}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <Button Grid.Column="2"
                                    Content="&#9654;"
                                    Command="{Binding IncreaseLevelCommand}"
                                    FontSize="24"
                                    Width="50"
                                    Height="50"
                                    Background="{DynamicResource ButtonBackgroundBrush}"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    CornerRadius="4"
                                    Focusable="False"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="0,20,0,40" HorizontalAlignment="Center" Spacing="15">
                <Border x:Name="PlayButtonBorder"
                        BorderThickness="3"
                        BorderBrush="Transparent"
                        CornerRadius="7"
                        HorizontalAlignment="Center">
                    <Button Content="{x:Static res:Strings.Play}"
                            Command="{Binding PlayCommand}"
                            IsEnabled="{Binding CanPlay}"
                            FontSize="20"
                            FontWeight="Bold"
                            Padding="60,15"
                            Background="{DynamicResource AccentGreenBrush}"
                            Foreground="White"
                            CornerRadius="4"
                            Focusable="False"/>
                </Border>

                <Border x:Name="BackButtonBorder"
                        BorderThickness="3"
                        BorderBrush="Transparent"
                        CornerRadius="7"
                        HorizontalAlignment="Center">
                    <Button Content="{x:Static res:Strings.Back}"
                            Command="{Binding BackCommand}"
                            FontSize="14"
                            Padding="40,10"
                            Background="{DynamicResource ButtonBackgroundBrush}"
                            Foreground="{DynamicResource SecondaryTextBrush}"
                            CornerRadius="4"
                            Focusable="False"/>
                </Border>

                <TextBlock Text="{x:Static res:Strings.NavAuthorFeed}"
                           FontSize="12"
                           Foreground="{DynamicResource TertiaryTextBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
